{
  "compilerOptions": {
    "outDir": "../../dist/libs/orpc",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "*.json"
  ],
  "references": [
    {
      "path": "../db/tsconfig.lib.json"
    }
  ]
}
