{
  "compilerOptions": {
    "composite": true,
    "declarationDir": "../../dist/libs/ui",
    "jsx": "react-jsx",
    "outDir": "../../dist/libs/ui"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    "../../types/**/*.d.ts"
  ],
  "references": []
}
