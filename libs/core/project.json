{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "core",
  "projectType": "library",
  "sourceRoot": "libs/core/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "libs/core/dist"
      }
    },
    "lint": {
      "cache": true,
      "command": "pnpm exec biome check --changed libs/core/**"
    },
    "lint:ci": {
      "cache": true,
      "command": "pnpm exec biome ci --changed libs/core/**"
    },
    "test": {
      "cache": true,
      "executor": "@nx/vite:test",
      "options": {
        "reportsDirectory": "../../coverage/libs/core"
      },
      "outputs": ["{options.reportsDirectory}"]
    }
  }
}
