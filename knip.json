{
  "ignore": [
    "**/generated/**",
    "**/*.d.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "ignoreDependencies": [
    "@dex-web/core",
    "@dex-web/grpc-client",
    "@dex-web/orpc",
    "@dex-web/ui",
    "@dex-web/utils"
  ],
  "workspaces": {
    "apps/web": {
      "entry": [
        "next.config.ts",
        "middleware.ts",
        "instrumentation.ts",
        "instrumentation-client.ts",
        "src/app/**/page.{ts,tsx}",
        "src/app/**/layout.{ts,tsx}",
        "src/app/**/route.{ts,tsx}",
        "src/app/**/default.{ts,tsx}",
        "src/app/**/global-error.{ts,tsx}",
        "src/app/**/error.{ts,tsx}",
        "src/app/**/loading.{ts,tsx}",
        "src/app/**/not-found.{ts,tsx}",
        "src/app/**/template.{ts,tsx}",
        "src/i18n/request.ts",
        "src/i18n/routing.ts",
        "vite.config.ts",
        "vitest.setup.ts"
      ],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "libs/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "libs/grpc-client": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "libs/orpc": {
      "entry": ["src/client.ts", "src/server.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "libs/ui": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "libs/utils": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  }
}
