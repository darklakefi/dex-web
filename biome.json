{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/storybook-static/**",
      "!**/out-tsc/**",
      "!**/test-results/**"
    ],
    "maxSize": 10485760
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    },
    "jsxRuntime": "transparent"
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "functions": ["clsx", "cva", "tw"]
          }
        }
      },
      "performance": {
        "recommended": true
      },
      "recommended": true,
      "security": {
        "recommended": true
      },
      "style": {
        "noNonNullAssertion": "off",
        "recommended": true
      },
      "suspicious": {
        "noDocumentCookie": "off",
        "recommended": true
      }
    }
  },
  "overrides": [
    {
      "includes": ["package.json", "**/package.json"],
      "json": {
        "formatter": {
          "expand": "always"
        }
      }
    },
    {
      "includes": ["tsconfig*.json", "**/tsconfig*.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": [".vscode/**/*.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": [
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "formatter": {
        "enabled": false
      },
      "includes": ["**/generated/**", "**/*_pb.ts", "**/*.generated.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": [
        "apps/web/src/app/**/page.tsx",
        "apps/web/src/app/**/layout.tsx"
      ],
      "javascript": {
        "formatter": {
          "lineWidth": 100
        }
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "develop",
    "enabled": true,
    "root": ".",
    "useIgnoreFile": true
  }
}
