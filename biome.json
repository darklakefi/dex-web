{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["apps/**", "libs/**"]
  },
  "formatter": {
    "enabled": true,
    "includes": ["apps/**", "libs/**"],
    "indentStyle": "space",
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "includes": ["apps/**", "libs/**"],
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "functions": ["clsx", "cva", "tw"]
          }
        }
      },
      "performance": {
        "recommended": true
      },
      "recommended": true,
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "develop",
    "enabled": true,
    "useIgnoreFile": true
  }
}
