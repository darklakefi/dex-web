{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@dex-web/core": ["libs/core/src/index.ts"],
      "@dex-web/db": ["libs/db/src/index.ts"],
      "@dex-web/grpc-client": ["libs/grpc-client/src/index.ts"],
      "@dex-web/orpc": ["libs/orpc/src/index.ts"],
      "@dex-web/orpc/*": ["libs/orpc/src/*"],
      "@dex-web/ui": ["libs/ui/src/index.ts"],
      "@dex-web/utils": ["libs/utils/src/index.ts"],
      "@dex-web/web": ["apps/web/src/index.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "typeRoots": ["types", "node_modules", "node_modules/@types"],
    "types": ["svg", "css", "image"],
    "verbatimModuleSyntax": false
  }
}
