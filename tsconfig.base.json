{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "preserve",
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "typeRoots": ["types", "node_modules", "node_modules/@types"],
    "types": ["svg", "css", "image"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "tmp"],

  "include": [
    "vite.config.base.ts",
    "types/svg.d.ts",
    "types/css.d.ts",
    "types/image.d.ts"
  ]
}
