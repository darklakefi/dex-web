{
  "compilerOptions": {
    "noEmit": false,

    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "extends": "./tsconfig.json",
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
