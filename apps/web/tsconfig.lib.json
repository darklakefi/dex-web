{
  "compilerOptions": {
    "declarationDir": "./dist",
    "incremental": true,
    "jsx": "preserve",
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "../../dist/**/*"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../../dist/dist/types/**/*.ts",
    "../../apps/web/dist/dist/types/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/ui/tsconfig.lib.json"
    },
    {
      "path": "../../libs/orpc/tsconfig.lib.json"
    },
    {
      "path": "../../libs/core/tsconfig.lib.json"
    }
  ]
}
