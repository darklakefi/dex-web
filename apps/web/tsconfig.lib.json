{
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es2022"
  },
  "exclude": [
    "../../dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "**/test/**/*"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "../../types/**/*.d.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.cts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../dist/apps/web/.next/types/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/utils/tsconfig.lib.json"
    },
    {
      "path": "../../libs/ui/tsconfig.lib.json"
    },
    {
      "path": "../../libs/orpc/tsconfig.lib.json"
    },
    {
      "path": "../../libs/grpc-client/tsconfig.lib.json"
    },
    {
      "path": "../../libs/core/tsconfig.lib.json"
    }
  ]
}
