{
  "compilerOptions": {
    "declarationDir": "./dist/types",
    "incremental": true,
    "jsx": "preserve",
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "../../dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "**/test/**/*"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mts",
    "src/**/*.cts"
  ],
  "references": [
    {
      "path": "../../libs/utils/tsconfig.lib.json"
    },
    {
      "path": "../../libs/ui/tsconfig.lib.json"
    },
    {
      "path": "../../libs/orpc/tsconfig.lib.json"
    },
    {
      "path": "../../libs/grpc-client/tsconfig.lib.json"
    },
    {
      "path": "../../libs/core/tsconfig.lib.json"
    }
  ]
}
