{
  "compilerOptions": {
    "declarationDir": "./dist/types",
    "incremental": true,
    "jsx": "preserve",
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "../../dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "**/test/**/*"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    "src/**/*.cts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "references": []
}
